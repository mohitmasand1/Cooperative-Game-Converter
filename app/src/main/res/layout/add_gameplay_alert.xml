<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewGamePlay"
        android:layout_width="162dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/apple" />

    <TextView
        android:id="@+id/textViewDialogGamePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="#131010"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="39dp"
        android:text="Great Work!"
        android:textAlignment="center"
        android:textColor="#090707"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextAchievedTV"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="-4dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#070606" />

    <ImageButton
        android:id="@+id/replayAnimBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_baseline_replay_24" />

    <View
        android:id="@+id/alert_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nextAchievedTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/cameraGamePlayAlertIV"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="30dp"
        tools:srcCompat="@null" />

    <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:backgroundTint="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="287dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/memoryCapturedTv"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraGamePlayAlertIV"
        android:layout_alignStart="@+id/nextAchievedTV"
        android:layout_alignEnd="@+id/nextAchievedTV"
        android:layout_marginStart="19dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="17dp"
        android:text="Memory Captured!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>